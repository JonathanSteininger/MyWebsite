@model MyActualWebsite.Models.Mail

<form asp-action="CreateMail" class="bg-secondary p-3 border-radius-primary d-flex flex-column" style="gap: 1rem 0;">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label text-color-heading"></label>
        <input asp-for="Name" maxlength="50" required class="form-control d-block w-100 border-radius-primary p-2 bg-primary border-1 border-bg-primary border target-border-primary text-color-info" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="control-label text-color-heading">Email Address (Optional)</label>
        <input asp-for="Address" type="email" class="form-control d-block w-100 border-radius-primary p-2 bg-primary border-1 border-bg-primary border target-border-primary text-color-info" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Body" class="control-label  text-color-heading"></label>
        <textarea asp-for="Body" minlength="30" required rows="25" class="form-control clearValueOnLoad d-block w-100 border-radius-primary p-2 bg-primary border-1 border-bg-primary border target-border-primary text-color-info"></textarea>
        <span asp-validation-for="Body" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-primary d-block border-radius-primary p-2 bg-primary border-0 text-light px-5" />
    </div>
</form>
@section Scripts {
    <partial name="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" />
}