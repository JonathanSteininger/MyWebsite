@model List<MyActualWebsite.Models.Tag>
@if (Model.Count == 0) return;
<div class="bg-primary mt-1 p-2 border-radius-primary h-100-last flex-grow-1">

    <p class="h5 text-color-heading my-auto mx-2">
        @ViewData["ListName"]
    </p>
    <div class="d-flex flex-wrap align-content-center align-content-stretch" style="">
        @foreach (MyActualWebsite.Models.Tag tag in Model)
        {
            <p class="border-bg-primary @{if(tag.isChecked){ <text>border-secondary</text>}} border d-block m-2 text-color-heading h-min-content py-2 px-2 bg-secondary border-2 border-radius-primary text-center flex-grow-1" style="flex-basis: 90px;">
                @tag.TagName
            </p>
        }
    </div>
</div>
