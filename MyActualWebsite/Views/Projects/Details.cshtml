@model MyActualWebsite.Models.Project

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-light">Details</h1>

<div>
    <h4 class="text-light">Project</h4>
    <hr class="bg-light"/>
    <dl class="row text-light">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Body)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Body)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VideoFilePath)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VideoFilePath)
            @if (!string.IsNullOrEmpty(@Model.VideoFilePath))
            {
                <br />
                <video src="~/Content/Videos/Projects/@Model.VideoFilePath" width="150px" controls muted />
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageFileName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageFileName)

            @if (!string.IsNullOrEmpty(@Model.ImageFileName))
            {
                <br />
                <img src="~/Content/Images/Projects/@Model.ImageFileName" width="100px" />
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ResipitoryUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ResipitoryUrl)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ProjectKey">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
